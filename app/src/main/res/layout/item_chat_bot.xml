<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="start">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_bot_avatar"
        android:background="@drawable/bg_circle_main"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:maxWidth="280dp">

        <TextView
            android:id="@+id/tv_bot_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_bot_message"
            android:padding="12dp"
            android:text="@string/chatbot_sample_message"
            android:textSize="16sp"
            android:textColor="@color/textColorHeading"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:id="@+id/tv_bot_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 AM"
            android:textSize="12sp"
            android:textColor="@color/textColorAccent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</LinearLayout>